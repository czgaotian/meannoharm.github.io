<main>
    <div class="main-container post-container">
        <% if (is_post()) { %>
        <div class="post-title">
            <h1><%= page.title %></h1>
        </div>
        <div class="post-meta-container">
            <div class="post-meta-item">
                <i class="fa-solid fa-clock"></i><span class="post-date"><%= date(page.date, 'YYYY-MM-DD HH:mm:ss') %></span>
            </div>
            <% if (page.tags && page.tags.length) { %>
                <div class="post-meta-item">
                    <i class="fa-solid fa-tag"></i>
                    <% page.tags.forEach((tag) => { %>
                        <a href="<%- url_for(tag.path) %>"><%- tag.name %></a>
                    <% }); %>
                </div>
            <% } %>
        </div>
        <% } %>
        <div class="post-content">
            <%- page.content %>
        </div>
        <% if (theme.utterances && theme.utterances.enable && page.comments) { %>
            <script src="https://utteranc.es/client.js"
                repo="<%= theme.utterances.repo %>"
                issue-term="<%= theme.utterances.issueTerm %>"
                theme="<%= theme.utterances.theme %>"
                crossorigin="anonymous"
                async>
            </script>
        <% } %>
    </div>
</main>